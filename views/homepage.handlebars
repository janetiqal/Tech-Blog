{{#each posts as |post|}}
<div class="card card-post">
  <h2 class="card-header">{{title}}</h2>


    <p>{{post_body}}</p>
  
    <p>Written by: {{user.username}}, {{format_date created_at}}</p>
  
    {{#if comments.length}}
    <a class="cmntLink" href="/post/{{id}}"> {{comments.length}} {{make_plural "comment"comments.length}}</a>
    {{else}}
    <a class="cmntLink" href="/post/{{id}}">Add A Comment</a>
    {{/if}}
  

</div>
{{else}}
<h1>NO POSTS</h1>
{{/each}}